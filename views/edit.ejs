<% layout('layouts/styleTemplate')%>
<!--  -->
<div class="row justify-content-center">
  <h1 class="text-center">edit your camp</h1>
  <div class="col-6 offest-3">
    <form
      action="/camp/<%= camps._id %>?_method=PUT"
      method="POST"
      class="validate"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Camp title</label>
        <input
          class="form-control"
          type="text"
          name="title"
          id="title"
          value="<%= camps.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Camp location</label>
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= camps.location %>"
          required
          multiple
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">add images</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Camp Price $</span>
        </div>

        <input
          type="text"
          id="price"
          placeholder="0.00"
          name="price"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          value="<%= camps.price %>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">description</label>
        <textarea
          class="form-control"
          type="text"
          name="description"
          id="description"
          required
        >
<%= camps.description %></textarea
        >
        <div class="mb-3">
          <% camps.image.forEach((img,i) => { %>
          <img
            src="<%= img.url %>"
            class="img-thumbnail"
            width="200"
            height="200"
          />

          <div class="form-check-inline">
            <input
              type="checkbox"
              id="image-<%= i %>"
              name="deleteImage[]"
              value="<%= img.fileName %>"
            />
          </div>
          <div>
            <label for="image-<%= i %>">Delete this image?</label>
          </div>

          <% }) %>
        </div>
      </div>
      <button class="btn btn-primary">submit</button>
    </form>
    <div><a href="/camp">back to all camps</a></div>
  </div>
</div>
